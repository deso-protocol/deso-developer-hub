{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "inlineSources": true,
    "inlineSourceMap": true,
    "paths": {
      "@deso-core/data": ["libs/data/src/index.ts"],
      "@deso-core/identity": ["libs/identity/src/index.ts"],
      "deso-protocol": ["libs/deso-protocol/src/index.ts"],
      "deso-protocol-types": ["libs/deso-protocol-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
